          .row.form
            .col-sm-6.row-col
              .box
                input.name.form-control(type='text', name='name', placeholder='姓名/称呼')
                input.mail.form-control(type='text', name='email', placeholder='电子邮箱')
                input.phone.form-control(type='text', name='phone', placeholder='手机号码')
                input.company.form-control(type='text', name='company', placeholder='公司名称')
            .col-sm-6
              .box
                textarea.form-control(name='remark', placeholder='备注信息')
          .row.submit
            .col-md-5.box
            .col-md-3.right
              input(type='submit', value='确认无误，提交信息')

